<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Document</title>
</head>
<body class="d-flex flex-column justify-content-between ">
    <%- include('partials/_navbar.ejs') %>
    <main class="container">
        <input type="text" id="search-inp">
        <button id="search-btn">search</button>
        <h2 class="" id="site-title"></h2>
        <div id="site-content">

        </div>

        <div class="wiki-container">
            <% entries.forEach(entry => { %>
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title"><%= entry.entry_title %></h4>
                        <p class="card-text"><%= entry.entry_description %></p>
                        <div class="card-subtitle">08/12/22</div>
                        <a class="btn btn-primary mt-4" href="/wiki/<%= entry.id %>">View</a>
                    </div>
                </div>
            <% }) %>    
        </div>

    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="./app.js"></script>

</body>
</html>